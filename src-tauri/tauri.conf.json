{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DayLight",
  "version": "0.1.0",
  "identifier": "com.daylight.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:43181",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DayLight",
        "width": 420,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 320,
        "minHeight": 480
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
